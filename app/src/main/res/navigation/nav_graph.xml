<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/coffeeListFragment">
    <fragment
        android:id="@+id/coffeeListFragment"
        android:name="com.example.coffeehopper.presentationlayer.fragments.CoffeeListFragment"
        android:label="CoffeeListFragment"
        tools:layout="@layout/fragment_coffee_list">
        <action
            android:id="@+id/action_coffeeListFragment_to_coffeeDetailsFragment"
            app:destination="@id/coffeeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/coffeeMapFragment"
        android:name="com.example.coffeehopper.presentationlayer.fragments.CoffeeMapFragment"
        android:label="CoffeeMapFragment"
        tools:layout="@layout/fragment_coffee_map"/>
    <fragment
        android:id="@+id/coffeeFavoritesFragment"
        android:name="com.example.coffeehopper.presentationlayer.fragments.CoffeeFavoritesFragment"
        android:label="CoffeeFavoritesFragment"
        tools:layout="@layout/fragment_coffee_favorites"/>
    <fragment
        android:id="@+id/coffeeDetailsFragment"
        android:name="com.example.coffeehopper.presentationlayer.fragments.CoffeeDetailsFragment"
        android:label="CoffeeDetailsFragment"
        tools:layout="@layout/activity_coffee_details">
        <argument
            android:name="coffeeHop"
            app:argType="com.example.coffeehopper.datalayer.database.CoffeeHop" />
    </fragment>
</navigation>